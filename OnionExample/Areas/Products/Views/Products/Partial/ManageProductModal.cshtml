<div class="modal fade" id="manageProductModal" tabindex="-1" role="dialog" aria-labelledby="manageProductModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" ng-controller="manageProductController">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="manageProductModalLabel">{{actionTitle}}</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Product Title</label>
                        <input type="text" class="form-control" placeholder="Enter title" ng-model="product.title">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Product Description</label>
                        <textarea class="form-control" placeholder="Enter Description" ng-model="product.description"></textarea>
                    </div>
                    <div class="form-check" style="width: 200px;">
                        <label for="exampleInputPassword1">Price</label>
                        <input type="number" class="form-control" placeholder="Enter price" ng-model="product.price">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" ng-click="saveProduct()">Save changes</button>
            </div>
        </div>
    </div>
</div>