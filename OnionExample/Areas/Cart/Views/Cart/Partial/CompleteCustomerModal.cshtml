<div class="modal fade" id="completeCustomerModal" tabindex="-1" role="dialog" aria-labelledby="completeCustomerLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" ng-controller="completeCustomerController">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="completeCustomerLabel">Set Customer</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="example-text-input" class="col-2 col-form-label">Customer</label>
                    <div class="col-10">
                        <input type="text" class="form-control" placeholder="Enter title" ng-model="name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="example-text-input" class="col-2 col-form-label">Phone</label>
                    <div class="col-10">
                        <input type="text" class="form-control" placeholder="Enter title" ng-model="phone">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" ng-click="submit()">Save changes</button>
            </div>
        </div>
    </div>
</div>